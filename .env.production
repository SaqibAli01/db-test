PORT=5000
NODE_ENV=production

# MongoDB - Update with your MongoDB Atlas URI or Hostinger MongoDB details
MONGODB_URI=your_mongodb_uri_here

# JWT Secret - Change this to a secure random string
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=7d

# Mailer - Update with your Hostinger email SMTP settings
SMTP_HOST=your_hostinger_smtp_host
SMTP_PORT=587
SMTP_USER=your_email@yourdomain.com
SMTP_PASS=your_email_password
EMAIL_FROM="Your Name <your_email@yourdomain.com>"

# WhatsApp - Update with your Twilio or Meta credentials
WHATSAPP_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Application Base URL - Update with your Hostinger domain
APP_BASE_URL=https://your-domain.com