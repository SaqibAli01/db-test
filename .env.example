# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=your_mongodb_connection_string

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Mailer (SMTP settings)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM="Your Name <your@email.com>"

# WhatsApp (Twilio or Meta Cloud API)
WHATSAPP_PROVIDER=twilio     # or 'meta_cloud'
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886  # Twilio sandbox number

# Or for Meta Cloud API
META_WHATSAPP_TOKEN=your_meta_whatsapp_token
META_WHATSAPP_PHONE_NUMBER_ID=your_meta_phone_number_id

# Application
APP_BASE_URL=http://localhost:5000